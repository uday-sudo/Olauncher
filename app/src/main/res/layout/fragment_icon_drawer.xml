<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="?attr/primaryColorInverseTrans50"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdgeLength="48dp"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="12dp"
            tools:visibility="visible">

            <TextView
                style="@style/TextLarge"
                android:background="@drawable/rounded_corner_bg"
                android:layout_width="match_parent"
                android:paddingStart="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/choose_an_icon"
                android:textColor="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption1"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption2"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_circle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption3"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_camera"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption4"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_gallery"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption5"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_mail"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption6"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_message"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption7"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_music"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption8"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_phone"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />

            <ImageView
                android:id="@+id/iconOption9"
                android:layout_height="@dimen/img_large"
                android:layout_width="@dimen/img_large"
                android:src="@drawable/ic_web"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:tint="?attr/primaryColor" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>